{
  "name": "vozia-agent-expo",
  "version": "1.0.0",
  "description": "Vozia AI Agent SDK for Expo/React Native",

  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "yarn workspace @vozia/agent build",
    "dev": "yarn workspace @vozia/agent dev",
    "lint": "eslint packages examples --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "clean": "rimraf packages/*/dist examples/*/dist",
    "prepare": "yarn build"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vozia/vozia-agent-expo.git"
  },
  "keywords": [
    "vozia",
    "ai",
    "agent",
    "expo",
    "react-native",
    "chat",
    "voice",
    "sdk"
  ],
  "author": "Vozia",
  "license": "MIT"
}
